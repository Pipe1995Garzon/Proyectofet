<div class="container">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre Completo</th>
      <th scope="col">Programa</th>
      <th scope="col">Nivel Academico</th>
      <th scope="col">Salario</th>
      <th scope="col">Labor</th>
      <th scope="col">Inicio de contrato</th>
      <th scope="col">Fin de contrato</th>
      <th scope="col">Modificar</th>
      <th scope="col">  Eliminar</th>
    </tr>
  </thead>
  <tbody>
    {{#each teacher_list}}
    <tr>
      <th scope="row">{{id_docentes}}</th>
      <td>{{nombres}}</td>
      <td>{{CC}}</td>
      <td>{{programa}}</td>
      <td>{{salario}}</td>
      <td>{{labor}}</td>
      <td>{{inicio_contrato}}</td>
      <td>{{fin_contrato}}</td>
      <td>
        <!-- Button Update modal -->
          <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modificardocente{{id_docentes}}">
            Modificar
          </button>

          <!--Update Modal -->
          <div class="modal fade" id="modificardocente{{id_docentes}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">

                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Modificar dato</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">                                            
                  <div class="card">
                    <div class="card-body">
                      <div class="card text-center">
                        <form action="/docente/modificar_docentes/{{id_docentes}}" method="post">
                          <div class="form-group">
                            <h5 class="card-title">Gestion plantilla docentes</h5>
                            <label class="form-label">nombre completo {{nombres}}</label>
                             <input type="text" class="form-control" value={{nombres}} name="nombres" autofocus required/>
                          </div>
                          <div class="form-group">
                            <label class="form-label">CC</label>
                            <input type="text" class="form-control" value={{CC}} name="CC" required/>
                          </div>
                          <div class="form-group">
                            <label class="form-label">Corre electronico</label>
                            <input type="email" class="form-control" value={{correo_electronico}} name="correo_electronico" required/>
                          </div> 
                          
                          <div class="form-group">                    
                            <label>Nivel academico: {{Academico}}</label><br>
                            <select name="id_Nivel_Aca" class="btn btn-success ">
                            <option value="1">Pregrado</option> 
                            <option value="2">Especializacion</option> 
                            <option value="3">Magister</option> 
                            <option value="4">Doctorado</option> 
                            </select>  
                            <br><br>                          
                          </div>

                          <div class="form-group">                    
                            <label>Contrato: {{Tipo_Contrato}}</label><br>
                            <select name="id_Contrato" class="btn btn-success ">
                            <option value="1">Tiempo Completo</option> 
                            <option value="2">Medio Tiempo</option>                            
                            </select>   
                            <br><br>                          
                          </div>

                          
                          <div class="form-group">                    
                            <label>Programa: {{labor}}</label><br>
                            <select name="id_labor" class="btn btn-success ">
                            <option value="1">Docente</option> 
                            <option value="2">Investigador</option> 
                            <option value="3">Externo</option> 
                            <option value="4">Administrativo</option> 
                            </select>   
                            <br><br>                          
                          </div>

                           <div class="form-group">                    
                            <label>Programa: {{programa}}</label><br>
                            <select name="id_programa" class="btn btn-success ">
                            <option value="1" >Seguridad Ocupacional</option> 
                            <option value="2">Ingenieria de Alimentos</option> 
                            <option value="3">Ingenieria de Software</option> 
                            <option value="4">Ingenieria Electrica</option> 
                            </select>   
                            <br><br>                          
                          </div>

                          <div class="form-group">
                            <label class="form-label">Fecha inicio: {{inicio_contrato}} </label>
                            <input type="date" class="form-control" name="inicio_contrato" required/>
                          </div>

                          <div class="form-group">
                            <label class="form-label">Fecha fin:{{fin_contrato}} </label>
                            <input type="date" class="form-control" name="fin_contrato" required/>
                          </div>
                          <div class="form-group">
                            <label class="form-label">Salario</label>
                            <input type="number" class="form-control" value={{salario}} name="salario" required/>
                          </div>                                                      
                        </div>
                       </div>
                     </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Modificar</button>
                  </form>
                </div>

              </div>
            </div>
          </div>
      </td>   
      <td>
         
          <!-- Delete Button modal -->
          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteemployed{{id_docentes}}">
            Eliminar
          </button>

          <!--Delete Modal -->
          <div class="modal fade" id="deleteemployed{{id_docentes}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Eliminar dato</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  est√° seguro de quitar de la lista a  {{nombres}}
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <a class="btn btn-danger" href="/docente/eliminar_docentes/{{id_docentes}}" role="button">Eliminar</a>
                </div>
              </div>
            </div>
          </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
